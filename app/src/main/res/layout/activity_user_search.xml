<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".app.src.main.java.com.example.jayvaghela.loginregister.UI.UserSearch">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:src="@drawable/wty"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:src="@drawable/sn"
        android:layout_below="@+id/imageView9"

        android:layout_alignRight="@+id/imageView9"
        android:layout_alignEnd="@+id/imageView9" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Module"
        android:id="@+id/btnsm"
        android:textColor="#ef196f"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_alignRight="@+id/imageView9"
        android:layout_alignEnd="@+id/imageView9"
        android:layout_centerVertical="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Course"
        android:id="@+id/btnsc"
        android:textColor="#ef196f"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_above="@+id/btnsm"
        android:layout_alignLeft="@+id/btnsm"
        android:layout_alignStart="@+id/btnsm" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Username"
        android:id="@+id/btnsu"
        android:textColor="#ef196f"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/btnsm"
        android:layout_alignLeft="@+id/btnsm"
        android:layout_alignStart="@+id/btnsm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etSearchCourse"
        android:layout_alignTop="@+id/btnsc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnsc"
        android:layout_toStartOf="@+id/btnsc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etSearchModule"
        android:layout_alignTop="@+id/btnsm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etSearchCourse"
        android:layout_alignEnd="@+id/etSearchCourse" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etSearchUsername"
        android:layout_alignTop="@+id/btnsu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/etSearchModule"
        android:layout_alignEnd="@+id/etSearchModule" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUserProfile"
        android:src="@drawable/head"
        android:layout_below="@+id/etSearchUsername"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
