<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".app.src.main.java.com.example.jayvaghela.loginregister.UI.UserProfileActivity"
    android:background="#ffffff"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Matches Found, Please see your results below"
        android:id="@+id/tvWelcomeMsg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="165dp"
        android:layout_height="178dp"
        android:id="@+id/profilepic"
        android:src="@drawable/head"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tvWelcomeMsg"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Email Address"
        android:id="@+id/btnRequestEmailAddress"
        android:textColor="#08a4ff"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnBackMatchesFound"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnBackMatchesFound" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="University"
        android:id="@+id/tvUni"
        android:layout_below="@+id/profilepic"
        android:layout_centerHorizontal="true"
        android:textSize="15dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvUni"
        android:layout_above="@+id/btnRequestEmailAddress" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBackMatchesFound"
        android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
        android:layout_alignTop="@+id/btnRequestEmailAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
